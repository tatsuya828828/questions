<div class="container-fluid">
	<div class="row">
		<div class="col-lg-3"></div>
		<div class="col-lg-6">
			<h1>質問詳細</h1>
			<p id="notice"><%= notice %></p>
			<table class="table table-bordered" style="margin-top: 10%;">
				<tr>
					<th style="width: 20%; background-color: #000; color: #fff; text-align: right; border-top: 0;">質問:</th><td style="border-top: 0;"><%= @question.quest %></td>
				</tr>
				<tr>
					<th style="width: 20%; background-color: #000; color: #fff; text-align: right;">答え:</th><td><%= @question.answer %></td>
				</tr>
				<tr>
					<th style="width: 20%; background-color: #000; color: #fff; text-align: right;">表示/非表示</th><td><%= @question.undisplay_switch_i18n %></td>
				</tr>
			</table>
			<div class="row">
				<div class="col-lg-6">
					<%= link_to '編集', edit_question_path(@question), class: "btn btn-primary form-control", style: "color: #fff;" %>
				</div>
				<div class="col-lg-6">
					<%= link_to '戻る', questions_path, class: "btn btn-danger form-control", style: "color: #fff;" %>
				</div>
			</div>
		</div>
	</div>
</div>
